@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";

.skills
    &__container
        background-color: $background_gray
        box-sizing: border-box
        width: 100%
        padding: $double_padding
    
    &__title
        color: $circle_purple
        font-family: $text_font
        margin:0
        text-align: center
    
    &__items
        display: flex
        justify-content: space-evenly
            
    &__item
        border-radius: 100%
        height: 4rem
        width: 4rem

        &:first-child
            background-color: $circle_purple

        &:nth-child(2)
            background-color: $circle_orange

        &:last-child
            background-color: $circle_green