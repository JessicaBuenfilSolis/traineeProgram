@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";

.arrow
    width: 100vw
    height 13rem
    background-color: $background_white
    background-image: url(./images/image.png)
    background-repeat: no-repeat
    background-position: top center
    padding: 0
    margin:0
        
    &__name
        box-sizing: border-box
        font-family: $text_font
        color: $white_text
        font-weight: bold
        text-align: center
    
    &__description
        font-family: $text_font
        color: $white_text
        text-align: center

    &__square
        box-sizing: border-box
        background-color: $square_color
        box-shadow: 1px 1px 7px gray
        width: 7rem
        height 7rem
        background-position: center
        position: absolute
        bottom: -7rem
        left: calc(50% - 3.5rem)
        border-radius: 10%